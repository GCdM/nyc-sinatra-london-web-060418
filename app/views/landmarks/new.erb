
<form class="" action="/landmarks" method="post">

  <label for="">Name:</label>
  <input id="landmark_name" type="text" name="landmark[name]" value="">

  <label for="">Year completed:</label>
  <input id="landmark_year_completed" type="text" name="landmark[year_completed]" value="">

  <label for="figure_select">Figure:</label>
  <select id="figure_select" name="landmark[figure_id]">
    <% @figures.each do |figure| %>
      <option value="<%= figure.id %>"><%= figure.name %></option>
      <% end %>

  </select>

  <input id="Create New Landmark" type="submit" />
</form>
