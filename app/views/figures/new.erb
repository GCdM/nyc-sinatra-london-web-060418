<h1>Create a new Historic Figure</h1>

<form action="/figures" method="post">
  <label for="figure_name">Figure's Name: </label>
  <input id="figure_name" type="text" name="figure[name]" />

  <br></br>
  <label>Select Figure's Title(s): </label>
  <br></br>

  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"/>
  <% end %>

  <br></br>
  <label>Create new Title: </label>
  <br></br>

  <input type="text" name="new_title[name]"/>

  <br></br>
  <label>Select Figure's Landmark(s): </label>
  <br></br>

  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"/>
  <% end %>

  <br></br>
  <label>Create new Landmark: </label>
  <br></br>

  <input type="text" name="new_landmark[name]"/>
  <input type="text" name="new_landmark[year_completed]"/>

  <input id="submit" type="submit" />
</form>
