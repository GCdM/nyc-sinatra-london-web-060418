<h1>Create a new Historic Figure</h1>

<form action="/figures" method="post">
  <label for="figure_name">Figure's Name: </label>
  <input id="figure_name" type="text" name="figure[name]" />

  <br></br>
  <label>Select Figure's Title(s): </label>
  <br></br>

  <% @titles.each do |title| %>
    <label for="title_<%= title.id %>"><%= title.name %></label>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"/>
  <% end %>

  <br></br>
  <label>Create new Title: </label>
  <br></br>

  <input id="new_title" type="text" name="new_title[name]"/>

  <br></br>
  <label>Select Figure's Landmark(s): </label>
  <br></br>

  <% @landmarks.each do |landmark| %>
    <label for="landmark_<%= landmark.id%>"><%= landmark.name %></label>
    <input id="landmark_<%= landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"/>
  <% end %>

  <br></br>
  <label>Create new Landmark: </label>
  <br></br>

  <input id="new_landmark" type="text" name="new_landmark[name]"/>
  <input id="new_landmark_year_completed" type="text" name="new_landmark[year_completed]"/>

  <input type="submit" id="Create New Figure"/>
</form>
